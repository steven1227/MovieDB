<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.Light.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>



        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>





    </style>


    <style name="image_default">
        <item name="placeholder">@drawable/default_movie</item>
    </style>

    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- enable window content transitions -->



        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>


        <!-- specify enter and exit transitions -->



    </style>

</resources>
